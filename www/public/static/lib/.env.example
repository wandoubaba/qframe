// 应用调试模式
app_debug='true'
// 应用Trace
app_trace='true'
// 应用模式状态
app_status=''
// 默认全局过滤方法 用逗号分隔多个
default_filter='stripslashes,htmlentities'

[database]
// 数据库类型
type='mysql'
// 服务器地址
hostname='localhost'
// 数据库名
database='databasename'
// 用户名
username='root'
// 密码
password='root'
// 端口
hostport='3306'
// 数据库表前缀
prefix='db_'
// 数据库调试模式
debug='true'

[paginate]
// 分页默认每页行数
list_rows='50'

[session]
prefix=''

[cookie]
prefix=''
// cookie 保存时间
expire='0'
// cookie 保存路径
path='/'
// 七牛云对象存储配置参数
[qiniu]
access_key='[your access_key]'
secret_key='[your secret_key]'
bucket='[your bucket]'
domain='[your domain]'
// 下划线后面为bucket的名称，用于管理不同bucket
domain_a='[your domain of bucket whitch named a]'
domain_b='[your domain of bucket whitch named b]'
// 样式名称
style_original='original'
style_water='water'
style_w150='w150'
style_w800='w800'
style_h480='h480'